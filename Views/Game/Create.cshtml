@model VintageGamesCollector.Models.Game

@{
    ViewData["Title"] = "Create";
}

<h4>Create new game</h4>

<hr />
<div class="row">
    @* <div class="col-2">*@
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="GameId" />
        <div class="form-group" id="form-group" style=" display: inline-flex">
            <label asp-for="GameName" class="control-label"></label>
            <input asp-for="GameName" class="form-control" />
            <span asp-validation-for="GameName" class="text-danger"></span>
        </div>
        <div class="form-group" id="form-group" style=" display: inline-flex">
            @using (Html.BeginForm("CategoryChosen", "Home", FormMethod.Get))
            {
                <fieldset style=" display: inline-flex">
                    <label asp-for="GameTypeId" class="control-label"></label>
                    @Html.DropDownList("GameTypes")
                </fieldset>
            }
        </div>
        <div class="form-group" id="form-group" style=" display: inline-flex">
            @using (Html.BeginForm("ManufacturerChosen", "Home", FormMethod.Get))
            {
                <fieldset style=" display: inline-flex">
                    <label asp-for="ManufacturerId" class="control-label"></label>
                    @Html.DropDownList("Manufacturer")
                </fieldset>
            }
        </div>
        <div class="form-group" id="form-group" style=" display: inline-flex">
            <label asp-for="GameImage" class="control-label"></label>
            <input class="form-control" type="file" name="Image" accept="image/*" />
            @*<input asp-for="GameImage" class="form-control" />*@
            <span asp-validation-for="GameImage" class="text-danger"></span>
        </div>
        <div class="form-group" id="form-group" style=" display: inline-flex">
            <label asp-for="LastPlayed" class="control-label"></label>
            <input asp-for="LastPlayed" class="form-control" />
            <span asp-validation-for="LastPlayed" class="text-danger"></span>
        </div>
        <div class="form-group" id="form-group" style=" display: inline-flex">
            <label asp-for="PlayedLevel" class="control-label"></label>
            <input asp-for="PlayedLevel" class="form-control" />
            <span asp-validation-for="PlayedLevel" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a asp-action="Index">Back to List</a>
        </div>
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
