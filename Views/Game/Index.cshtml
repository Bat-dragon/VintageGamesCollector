@model IEnumerable<Game>
@{
    ViewData["Title"] = "Home Page";
}


<div class="text-center">
    <div class="col-2">
        @*<h5 class="display-8">Welcome to Vintage Games Collector</h5>*@
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GameName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GameTypeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastPlayed)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.GameName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GameTypeId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastPlayed)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.GameId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.GameId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.GameId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>