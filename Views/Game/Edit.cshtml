@model VintageGamesCollector.Models.GameFull

@{
    ViewData["Title"] = "Edit";
}

<h3>Edit game</h3>

<hr />
<div class="row">
    @*<div class="col-md-2">*@
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="GameId" />
        <div class="form-group" id="form-group" style=" display: inline-flex">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group" style=" display: inline-flex">
            <label asp-for="Manufacturer" class="control-label"></label>
            <input asp-for="Manufacturer" class="form-control" />
            <span asp-validation-for="Manufacturer" class="text-danger"></span>
        </div>
        <div class="form-group" style=" display: inline-flex">
            <label asp-for="Type" class="control-label"></label>
            <input asp-for="Type" class="form-control" />
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
        <div class="form-group" style=" display: inline-flex">
            <label asp-for="Platform" class="control-label"></label>
            <input asp-for="Platform" class="form-control" />
            <span asp-validation-for="Platform" class="text-danger"></span>
        </div>
        <div class="form-group" style=" display: inline-flex">
            <label asp-for="Version" class="control-label"></label>
            <input asp-for="Version" class="form-control" />
            <span asp-validation-for="Version" class="text-danger"></span>
        </div>
        <div class="form-group" style=" display: inline-flex">
            <label asp-for="GameImage" class="control-label"></label>
            @*<input asp-for="GameImage" class="form-control" />*@
            <input class="form-control" type="file" name="Image" accept="image/*" />
            <span asp-validation-for="GameImage" class="text-danger"></span>
            @if (Model.GameImage != null)
            {
                <img src="@String.Format("data:image/png;base64,{0}",Convert.ToBase64String(Model.GameImage))" width="150" />
            }
            
        </div>
        <div class="form-group" style=" display: inline-flex">
            <label asp-for="LastPlayed" class="control-label"></label>
            <input asp-for="LastPlayed" class="form-control" />
            <span asp-validation-for="LastPlayed" class="text-danger"></span>
        </div>
        <div class="form-group" style=" display: inline-flex">
            <label asp-for="PlayedLevel" class="control-label"></label>
            <input asp-for="PlayedLevel" class="form-control" />
            <span asp-validation-for="PlayedLevel" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a asp-action="Index">Back to List</a>
        </div>
    </form>
</div>

