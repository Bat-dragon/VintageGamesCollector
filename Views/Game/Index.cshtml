@model IEnumerable<GameFull>
@{
    ViewData["Title"] = "Home Page";
}


<div class="text-center">
    <div class="col-2">
        @*<h5 class="display-8">Welcome to Vintage Games Collector</h5>*@
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Platform)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Version)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manufacturer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastPlayed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlayedLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GameImage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Platform)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Version)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manufacturer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastPlayed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlayedLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameImage)
                <img src ="item.GameImage" alt="Image" width="50">
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.GameId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.GameId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.GameId">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>